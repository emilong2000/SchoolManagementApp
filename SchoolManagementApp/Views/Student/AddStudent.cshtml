@model DomainModel.Models.Dtos.StudentDto

@{
    Layout = Layout;
}

<!DOCTYPE html>

<html>

<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @{
        if (ViewBag.Status != null)
        {
            if (ViewBag.Status == "Sucess")
            {
                <div>
                    <span style="color:forestgreen; margin-left:40%">@ViewBag.Status</span>
                </div>
            }
            else
            {
                <div>
                    <span style="color:red; margin-left:40%">@ViewBag.Status</span>
                </div>
            }

        }

    }
    <link href="~/Content/Site.css" rel="stylesheet" />
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            
                @*<div class="panel-heading">
                        <h3 class="panel-title" style="text-align:center">Enquiry Register Form</h3>
                    </div>
                    <br />*@

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="container">
                    <div class="row" style="background-color:lavender">
                    <h4 style="margin-left:40%; padding-top:2%;padding-bottom:2%">Student Registration Form</h4>
                    </div>
                    <div class="row">

                        <div class="col-md-6" style="background-color:lavender;">

                            <div class="form-group form-inline">
                                <label class="col-sm-2">First Name</label>&nbsp;&nbsp;&nbsp;
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control col-sm-9" } })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group form-inline">
                                <label class="col-sm-2">Last Name</label>&nbsp;&nbsp;&nbsp;
                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control col-sm-9", } })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group form-inline">
                                <label class="col-sm-2">Middle Name</label>&nbsp;&nbsp;&nbsp;
                                @Html.EditorFor(model => model.MiddleName, new { htmlAttributes = new { @class = "form-control col-sm-9", } })
                                @Html.ValidationMessageFor(model => model.MiddleName, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group form-inline">
                                <label class="col-sm-2">Password</label>&nbsp;&nbsp;&nbsp;
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control col-sm-9", } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group form-inline">
                                <label class="col-sm-2">Confirm Password</label>&nbsp;&nbsp;&nbsp;
                                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control col-sm-9", } })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group form-inline">
                                <label class="col-sm-2"></label>
                                <div class="col-sm-9">
                                    <input type="submit" value="Submit" class="btn btn-primary btn-lg" />
                                </div>
                            </div>


                        </div>
                        <div class="col-md-6" style="background-color:lavender;">
                            <div class="form-group form-inline">
                                <label class="col-sm-2">Address</label>&nbsp;&nbsp;&nbsp;
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control col-sm-9", } })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group form-inline">
                                <label class="col-sm-2">Reg Number</label>&nbsp;&nbsp;&nbsp;
                                @Html.EditorFor(model => model.RegNo, new { htmlAttributes = new { @class = "form-control col-sm-9" } })
                                @Html.ValidationMessageFor(model => model.RegNo, "", new { @class = "text-danger", name = "EnquiryReasonSub" })

                            </div>
                            <div class="form-group form-inline">
                                <label class="col-sm-2">Mobile Number</label>&nbsp;&nbsp;&nbsp;
                                @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control col-sm-9", } })
                                @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group form-inline">
                                <label class="col-sm-2">Email</label>&nbsp;&nbsp;&nbsp;
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-sm-9", } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group form-inline">
                                <label class="col-sm-2">Gender</label>&nbsp;&nbsp;&nbsp;
                                <select name="Gender" class="form-control col-sm-9">
                                    <option value="Male">Male</option>
                                    <option value="Female"> Female</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })

                            </div>

                        </div>
                    </div>


                 </div>

           </div>
        
    }

</body>
</html>
